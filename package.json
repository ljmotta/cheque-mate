    "url": "https://github.com/ljmotta/certi/issues"
  },
  "homepage": "https://github.com/ljmotta/certi#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.7",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.7",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "concurrently": "^5.0.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  }
}
